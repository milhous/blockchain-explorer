{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@actions/*": ["app/actions/*"],
      "@assets/*": ["app/assets/*"],
      "@libs/*": ["app/libs/*"],
      "@ui/*": ["app/ui/*"],
      "@widget/*": ["app/widget/*"],
      "@store/*": ["app/store/*"],
      "@test/*": ["app/test/*"]
    },
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx", "next.config.js", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
